<body>
    <h1>üéÖ New Year Crossword Puzzle</h1>
    <p class="subtitle">Fill in the 5 festive English words!</p>

    <div class="container">
        <div class="crossword" id="crossword-grid">
            <!-- Grid will be filled by JS -->
        </div>

        <div class="clues">
            <h2>üéÑ Clues</h2>
            <div class="clue-list">
                <div class="clue"><span class="clue-num">1.</span> White flakes that fall in winter (4 letters)</div>
                <div class="clue"><span class="clue-num">2.</span> Evergreen plant decorated at Christmas (4 letters)</div>
                <div class="clue"><span class="clue-num">3.</span> You unwrap it on New Year morning! (4 letters)</div>
                <div class="clue"><span class="clue-num">4.</span> Santa‚Äôs tiny helper (3 letters)</div>
                <div class="clue"><span class="clue-num">5.</span> Shiny object on top of the tree (4 letters)</div>
            </div>
        </div>

        <button class="btn" id="check-btn">‚úÖ Check Answers</button>
        <div id="result" style="margin-top: 10px; min-height: 24px; font-weight: bold;"></div>
    </div>

    <div class="footer">
        Happy New Year 2026! üéâ
    </div>

    <script>
        // Define crossword layout: 7 rows x 6 cols
        // '.' = black cell, letters = pre-filled or editable
        // Numbered cells: (0,0)=1, (4,1)=2, (4,4)=3, (6,2)=4, (0,0)=5 (but reused)
        // We'll use 1-5 numbering (1=SNOW/STAR start, 2=TREE, 3=ELF, 4=GIFT, 5=STAR ‚Äî but combine 1&5 as 1)
        // Let‚Äôs use:
        // 1: (0,0) ‚Üí STAR (across) & SNOW (down)
        // 2: (4,1) ‚Üí TREE (across)
        // 3: (4,4) ‚Üí ELF (down)
        // 4: (6,2) ‚Üí GIFT (across)

        const gridData = [
            // row 0: S T A R . .
            ['S', 'T', 'A', 'R', '.', '.'],
            // row 1: N . . . . .
            ['N', '.', '.', '.', '.', '.'],
            // row 2: O . . . . .
            ['O', '.', '.', '.', '.', '.'],
            // row 3: W . . . . .
            ['W', '.', '.', '.', '.', '.'],
            // row 4: . T R E E .
            ['.', 'T', 'R', 'E', 'E', '.'],
            // row 5: . . . . L .
            ['.', '.', '.', '.', 'L', '.'],
            // row 6: . . G I F T
            ['.', '.', 'G', 'I', 'F', 'T']
        ];

        const numbers = {
            '0,0': '1',
            '4,1': '2',
            '4,4': '3',
            '6,2': '4'
        };

        const correctAnswers = {
            '0,0': 'S', '0,1': 'T', '0,2': 'A', '0,3': 'R',      // STAR
            '0,0': 'S', '1,0': 'N', '2,0': 'O', '3,0': 'W',      // SNOW (shared S)
            '4,1': 'T', '4,2': 'R', '4,3': 'E', '4,4': 'E',      // TREE
            '4,4': 'E', '5,4': 'L', '6,4': 'F',                  // ELF
            '6,2': 'G', '6,3': 'I', '6,4': 'F', '6,5': 'T'       // GIFT
        };

        const editableCells = [
            // All non-black, non-pre-filled? Or allow editing everything except black?
            // We'll make ALL non-black cells editable (user can overwrite)
            // Black cells are '.'
        ];

        const grid = document.getElementById('crossword-grid');

        // Render grid
        for (let i = 0; i < 7; i++) {
            for (let j = 0; j < 6; j++) {
                const cell = document.createElement('div');
                cell.classList.add('cell');
                const key = `${i},${j}`;

                if (gridData[i][j] === '.') {
                    cell.classList.add('black');
                } else {
                    // Add input for editable cell
                    const input = document.createElement('input');
                    input.maxLength = 1;
                    input.dataset.row = i;
                    input.dataset.col = j;
                    input.value = ''; // start empty (user fills)
                    input.addEventListener('input', (e) => {
                        e.target.value = e.target.value.toUpperCase().replace(/[^A-Z]/g, '');
                    });
                    cell.appendChild(input);

                    // Add number if needed
                    if (numbers[key]) {
                        const numSpan = document.createElement('span');
                        numSpan.classList.add('number');
                        numSpan.textContent = numbers[key];
                        cell.appendChild(numSpan);
                    }
                }
                grid.appendChild(cell);
            }
        }

        // Focus next cell on input (right/down)
        const inputs = document.querySelectorAll('.cell input');
        inputs.forEach(input => {
            input.addEventListener('keydown', (e) => {
                const row = parseInt(e.target.dataset.row);
                const col = parseInt(e.target.dataset.col);
                let nextInput = null;

                if (e.key === 'ArrowRight') {
                    nextInput = document.querySelector(`input[data-row="${row}"][data-col="${col + 1}"]`);
                } else if (e.key === 'ArrowLeft') {
                    nextInput = document.querySelector(`input[data-row="${row}"][data-col="${col - 1}"]`);
                } else if (e.key === 'ArrowDown') {
                    nextInput = document.querySelector(`input[data-row="${row + 1}"][data-col="${col}"]`);
                } else if (e.key === 'ArrowUp') {
                    nextInput = document.querySelector(`input[data-row="${row - 1}"][data-col="${col}"]`);
                } else if (e.key === 'Enter' || e.key === 'Tab') {
                    e.preventDefault();
                    // Find next in reading order
                    let found = false;
                    inputs.forEach(el => {
                        if (found) {
                            nextInput = el;
                            return;
                        }
                        if (el === e.target) found = true;
                    });
                }

                if (nextInput) {
                    nextInput.focus();
                }
            });
        });

        // Check answers
        document.getElementById('check-btn').addEventListener('click', () => {
            let allCorrect = true;
            inputs.forEach(input => {
                const row = input.dataset.row;
                const col = input.dataset.col;
                const key = `${row},${col}`;
                const userVal = input.value.trim().toUpperCase();
                const correctVal = correctAnswers[key];

                if (userVal !== correctVal) {
                    allCorrect = false;
                    input.style.backgroundColor = userVal ? '#ffebee' : '#fff';
                    input.style.color = userVal ? '#c62828' : '#212529';
                } else {
                    input.style.backgroundColor = '#e8f5e9';
                    input.style.color = '#2e7d32';
                }
            });

            const resultDiv = document.getElementById('result');
            if (allCorrect) {
                resultDiv.textContent = 'üéâ Perfect! Happy New Year!';
                resultDiv.style.color = '#8ac926';
            } else {
                resultDiv.textContent = 'üîç Some answers need checking!';
                resultDiv.style.color = '#e63946';
            }
        });
    </script>
</body>
</html>
